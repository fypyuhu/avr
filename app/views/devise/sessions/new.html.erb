<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Article Video Robot</b>New</a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">

    <p class="login-box-msg">Sign in to start your session</p>

    <p id="notice"><%= notice %></p>
<div style="color:red">
    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
    <% end %>
</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group has-feedback">
          <%= f.email_field :email, autofocus: true, class: 'form-control' , type: 'email' , required: '' %>

        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off"  , class: 'form-control'  , required: ''%>

        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <% if devise_mapping.rememberable? -%>

        <div class="checkbox icheck">
            <label>

              <%= f.check_box :remember_me %> Remember Me

              </label>
          </div>

          <% end -%>

        </div><!-- /.col -->
        <div class="col-xs-4">

          <%= f.submit "Log in" , class: 'btn btn-primary btn-block btn-flat' %>

        </div><!-- /.col -->
      </div>
   <%end%>




        <%= render "devise/shared/links" %>



  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
