

<div class="register-box">
  <div class="register-logo">
    <a href="/"><b>Admin</b>LTE</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <ul style="color:red">
          <%= devise_error_messages! do |e| %>
              puts "<li>"+e.to_s+"</li>"
          <%end%>
        </ul>

        <%= f.hidden_field :reset_password_token %>

        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="form-group has-feedback">


          <%= f.password_field :password, autofocus: true, autocomplete: "off" ,class: 'form-control' ,required: ''%>

          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, autocomplete: "off" ,placeholder: 'Retype password',class: 'form-control' ,required: ''%>

          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="row">
          <!-- /.col -->
          <div class="col-xs-12">
            <%= f.submit "Change My password" , class: 'btn btn-primary btn-block btn-flat' %>

          </div><!-- /.col -->
        </div>
    <% end %>



    <%= render "devise/shared/links" %>
  </div><!-- /.form-box -->
</div>

