<!-- Bootstrap 3.3.5 -->

<script>
  $(function () {
    $("#table_created").DataTable();
    $("#table_uploaded").DataTable();
    $("#table_submited").DataTable();

  });

  $("#btn_modal_close").click(modal_close("play"));


  function modal_open( id,vid_id){
    $("#modal_title").html("title id: "+id);
    $("#modal_body").html("body vid_id: "+vid_id);

    if(id == 'play'){

      var content = '<video style="width: 100%" id="player" width="400" controls><source src="http://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4"><source src="http://www.w3schools.com/html/mov_bbb.ogg" type="video/ogg">Your browser does not support HTML5 video.</video>';
      $("#modal_body").html(content);


    }

    $('#modal_').modal({
      backdrop: 'static',
      keyboard: false
    });

    $("#modal_").modal('show');

    $('.btn_modal_close').attr('onClick', "modal_close('"+id+"')");

  }

  function modal_close( id){
    $("#modal_").modal('hide');
    $("#modal_body").html('Closing...');


  }





</script>

